<?xml version='1.0' encoding='utf-8'?>
<widget id="io.thothdragons.neoweather" version="1.0.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Neo Weather</name>
    <description>My Best Weather App</description>
    <author email="thothdragons@dragons.com" href="http://thothdragons.com/">Thoth et ses Dragons</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="portrait" />
    <engine name="android" spec="^6.3.0" />
</widget>